# =============================================================================
# Payrixa Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment.
# NEVER commit .env to version control.

# -----------------------------------------------------------------------------
# Django Core
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Security & PHI Compliance
# -----------------------------------------------------------------------------
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=

# HTTPS settings (enable in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# -----------------------------------------------------------------------------
# Database (PostgreSQL for production)
# -----------------------------------------------------------------------------
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=payrixa
# DB_USER=payrixa
# DB_PASSWORD=your-secure-password
# DB_HOST=localhost
# DB_PORT=5432

# Docker-specific (when using docker-compose)
# DB_HOST=db
# DB_PORT=5432

# -----------------------------------------------------------------------------
# Email (Mailgun via Anymail for production)
# -----------------------------------------------------------------------------
# Development: Console backend (prints emails to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production: Mailgun via Anymail
# EMAIL_BACKEND=anymail.backends.mailgun.EmailBackend
# MAILGUN_API_KEY=your-mailgun-api-key-here
# MAILGUN_DOMAIN=mg.yourdomain.com

# SMTP fallback settings (optional)
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_HOST_USER=postmaster@mg.yourdomain.com
# EMAIL_HOST_PASSWORD=your-smtp-password
# EMAIL_USE_TLS=True

DEFAULT_FROM_EMAIL=alerts@payrixa.com

# -----------------------------------------------------------------------------
# Production Security Settings
# -----------------------------------------------------------------------------
# HSTS settings (uncomment for production)
# SECURE_HSTS_SECONDS=31536000  # 1 year
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# -----------------------------------------------------------------------------
# Database URL (alternative format for production)
# -----------------------------------------------------------------------------
# DATABASE_URL=postgres://user:password@host:port/database

# -----------------------------------------------------------------------------
# CORS (for frontend clients)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
