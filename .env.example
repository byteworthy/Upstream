# =============================================================================
# Payrixa Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment.
# NEVER commit .env to version control.

# -----------------------------------------------------------------------------
# Django Core
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Security & PHI Compliance
# -----------------------------------------------------------------------------
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=

# HTTPS settings (enable in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# -----------------------------------------------------------------------------
# Database (PostgreSQL for production)
# -----------------------------------------------------------------------------
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=payrixa
# DB_USER=payrixa
# DB_PASSWORD=your-secure-password
# DB_HOST=localhost
# DB_PORT=5432

# Docker-specific (when using docker-compose)
# DB_HOST=db
# DB_PORT=5432

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# MVP: Console backend (prints emails to stdout - no email vendor required)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production with Mailgun: Uncomment these to enable real email delivery
# EMAIL_BACKEND=anymail.backends.mailgun.EmailBackend
# MAILGUN_API_KEY=your-mailgun-api-key-here
# MAILGUN_DOMAIN=mg.yourdomain.com

# Sender address (used regardless of backend)
DEFAULT_FROM_EMAIL=alerts@payrixa.com

# -----------------------------------------------------------------------------
# Production Security Settings
# -----------------------------------------------------------------------------
# HSTS settings (uncomment for production)
# SECURE_HSTS_SECONDS=31536000  # 1 year
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# -----------------------------------------------------------------------------
# Database URL (alternative format for production)
# -----------------------------------------------------------------------------
# DATABASE_URL=postgres://user:password@host:port/database

# -----------------------------------------------------------------------------
# Portal URL (required in production)
# -----------------------------------------------------------------------------
# Used in email templates for links. Required in production - broken links are a product bug.
PORTAL_BASE_URL=http://localhost:8000

# Production:
# PORTAL_BASE_URL=https://app.payrixa.com

# -----------------------------------------------------------------------------
# CSRF Trusted Origins (for production behind proxies)
# -----------------------------------------------------------------------------
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# -----------------------------------------------------------------------------
# Real Data Mode (for PHI - set True when handling real patient data)
# -----------------------------------------------------------------------------
# When REAL_DATA_MODE=True, FIELD_ENCRYPTION_KEY is required
# REAL_DATA_MODE=False  # Default: MVP demo mode with synthetic data

# -----------------------------------------------------------------------------
# CORS (for frontend clients)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
